<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800" prefWidth="1280" style="-fx-background-color: #f5f6f7;"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.def2u1t.easytickets.HelloController">

    <VBox prefWidth="260"
          style="-fx-background-color: #ffffff;               /* 纯白背景 */
             -fx-border-width: 0 1 0 0;
             -fx-border-color: #c0c0c0;"
          AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">
        <padding><Insets bottom="16" left="16" right="16" top="16"/></padding>

        <!-- 标题 -->
        <Label text="数据列表"
               style="-fx-text-fill: #003366;
                  -fx-font-size: 18px;
                  -fx-font-weight: bold;
                  -fx-padding: 0 0 12 4;"/>

        <!-- 数据列表 -->
        <ListView fx:id="dataListView" VBox.vgrow="ALWAYS"
                  style="-fx-background-color: #ffffff;
                     -fx-control-inner-background: #ffffff;
                     -fx-selection-bar: #003366;      /* 深蓝选中 */
                     -fx-selection-bar-text: #ffffff;  /* 白字 */
                     -fx-cell-hover-color: #e5f1ff;   /* 悬停淡蓝 */
                     -fx-font-size: 14px;"/>
    </VBox>

    <!-- 右侧主内容区 -->
    <ScrollPane fitToWidth="true" style="-fx-background-color: #f5f6f7; -fx-border-width: 0;"
                AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="260" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <content>
            <VBox spacing="24" style="-fx-background-color: #f5f6f7;">
                <padding><Insets bottom="24" left="32" right="32" top="24"/></padding>

                <!-- 上半部分：开票详情 -->
                <VBox spacing="16" style="-fx-background-color: #ffffff; -fx-padding: 16;
                                          -fx-border-radius: 8; -fx-background-radius: 8;
                                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 4, 0, 0, 2);">
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #202124;" text="开票详情"/>
                    <GridPane hgap="24" vgap="16">
                        <columnConstraints>
                            <ColumnConstraints halignment="LEFT" prefWidth="160"/>
                            <ColumnConstraints halignment="LEFT" prefWidth="250"/>
                            <ColumnConstraints halignment="LEFT" prefWidth="80"/>
                            <ColumnConstraints halignment="LEFT" prefWidth="200"/>
                            <ColumnConstraints halignment="LEFT" prefWidth="250"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints/><RowConstraints/><RowConstraints/>
                            <RowConstraints/><RowConstraints/><RowConstraints/>
                        </rowConstraints>

                        <!-- 第0行 -->
                        <Label style="-fx-text-fill:#5f6368;" text="开票日期：" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="tfInvoiceDate" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        <Label style="-fx-text-fill:#5f6368;" text="开票方式：" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                        <TextField fx:id="tfInvoiceMethod" GridPane.columnIndex="4" GridPane.rowIndex="0"/>

                        <!-- 第1行 -->
                        <Label style="-fx-text-fill:#5f6368;" text="客户名称：" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="tfCustomerName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Label style="-fx-text-fill:#5f6368;" text="上次回款日期：" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                        <TextField fx:id="tfLastPaymentDate" GridPane.columnIndex="4" GridPane.rowIndex="1"/>

                        <!-- 第2行 -->
                        <Label style="-fx-text-fill:#5f6368;" text="合同号码：" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="tfContractNo" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <Label style="-fx-text-fill:#5f6368;" text="票据类型：" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
                        <TextField fx:id="tfInvoiceType" GridPane.columnIndex="4" GridPane.rowIndex="2"/>

                        <!-- 第3行 -->
                        <Label style="-fx-text-fill:#5f6368;" text="发票金额：" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextField fx:id="tfInvoiceAmount" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        <Label style="-fx-text-fill:#5f6368;" text="开票备注账期：" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
                        <TextField fx:id="tfNote" GridPane.columnIndex="4" GridPane.rowIndex="3"/>

                        <!-- 第4行 -->
                        <Label style="-fx-text-fill:#5f6368;" text="回款金额：" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <TextField fx:id="tfPaymentAmount" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                        <Label style="-fx-text-fill:#5f6368;" text="实际销账账期：" GridPane.columnIndex="3" GridPane.rowIndex="4"/>
                        <TextField fx:id="tfActualPaymentTerm" GridPane.columnIndex="4" GridPane.rowIndex="4"/>

                        <!-- 第5行 -->
                        <Label style="-fx-text-fill:#5f6368;" text="未回金额：" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                        <TextField fx:id="tfUnpaidAmount" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                        <Label style="-fx-text-fill:#5f6368;" text="备注：" GridPane.columnIndex="3" GridPane.rowIndex="5"/>
                        <TextField fx:id="tfRemark" GridPane.columnIndex="4" GridPane.rowIndex="5"/>
                    </GridPane>

                    <!-- 底部按钮 -->
                    <HBox alignment="CENTER" spacing="20">
                        <Button text="添加记录"  style="-fx-background-color: #1a73e8; -fx-text-fill: white; -fx-background-radius:6; -fx-padding:6 20; -fx-cursor: hand;"/>
                        <Button text="添加回款"  style="-fx-background-color: #1a73e8; -fx-text-fill: white; -fx-background-radius:6; -fx-padding:6 20; -fx-cursor: hand;"/>
                        <Button text="修改记录"  style="-fx-background-color: #1a73e8; -fx-text-fill: white; -fx-background-radius:6; -fx-padding:6 20; -fx-cursor: hand;"/>
                        <Button text="删除记录"  style="-fx-background-color: #1a73e8; -fx-text-fill: white; -fx-background-radius:6; -fx-padding:6 20; -fx-cursor: hand;"/>
                    </HBox>
<!--                    onAction="#onAddInvoice"
onAction="#onAddPayment"
onAction="#onEditInvoice
onAction="#onDeleteInvoi-->
                </VBox>

                <!-- 下半部分：回款记录 -->
                <VBox spacing="16" style="-fx-background-color: #ffffff; -fx-padding: 16;
                                          -fx-border-radius: 8; -fx-background-radius: 8;
                                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 4, 0, 0, 2);">
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #202124;" text="回款记录"/>
                    <TableView fx:id="paymentTable" VBox.vgrow="ALWAYS" style="-fx-background-color: white;">
                        <columns>
                            <TableColumn fx:id="colPaymentDate" text="回款日期" prefWidth="100"/>
                            <TableColumn fx:id="colCustomerName" text="客户名称" prefWidth="150"/>
                            <TableColumn fx:id="colContractNo" text="入账合同号" prefWidth="150"/>
                            <TableColumn fx:id="colAmount" text="回款金额" prefWidth="100"/>
                            <TableColumn fx:id="colRemark" text="备注" prefWidth="200"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </VBox>
        </content>
    </ScrollPane>
</AnchorPane>
